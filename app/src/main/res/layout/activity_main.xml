        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.70"
                android:hint="@string/wpisz_nazw_u_ytkownika"
                android:id="@+id/rating_username_input"></EditText>

            <Button
                android:id="@+id/go_to_rating_history"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.30"
                android:layout_marginTop="5dp"
                android:text="@string/button_go_to_rating"
                android:textColor="@color/itemsBackground"></Button>
        </LinearLayout>

        <Button
            android:id="@+id/go_to_streamers"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.30"
            android:background="@color/itemsBackground"
            android:layout_marginTop="5dp"
            android:text="@string/streamerzy_online" />
        <Button
            android:id="@+id/go_to_youtube"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.30"
            android:background="@color/itemsBackground"
            android:linksClickable="true"
            android:onClick="goToYoutube"
            android:layout_marginTop="5dp"
            android:text="@string/lichess_youtube_button" />
   />
   </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>